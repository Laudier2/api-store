generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name    String
  email       String        @unique
  password    String
  phone    String
  age    String
  access    String
  created_at  DateTime      @default(now())
  update_at   DateTime      @default(now())
  User_Adress User_Adress[]

  @@map("users")
}

model Adress {
  id          String        @id @default(uuid())
  image       String
  street      String
  city        String
  home        String
  state       String
  cep         String
  district    String
  number      String
  created_at  DateTime      @default(now())
  update_at   DateTime      @default(now())
  User_Adress User_Adress[]

  @@map("adress")
}

model Category {
  id               String             @id @default(uuid())
  name             String
  product_category Product_Category[]

  @@map("categories")
}

model Product {
  id               String             @id @default(uuid())
  name             String
  bar_code         String             @unique
  price            String
  image            String[]
  size             String[]
  color            String[]
  slug             String             @unique
  description      String
  quantity         String
  created_at       DateTime           @default(now())
  product_category Product_Category[]

  @@map("products")
}

model Product_Category {
  id          String   @id @default(uuid())
  id_product  String
  id_category String
  categories  Category @relation(fields: [id_category], references: [id])
  products    Product  @relation(fields: [id_product], references: [id])

  @@map("product_category_relations")
}

model User_Adress {
  id        String @id @default(uuid())
  id_user   String
  id_adress String
  adress    Adress @relation(fields: [id_adress], references: [id])
  users     User   @relation(fields: [id_user], references: [id])
}
